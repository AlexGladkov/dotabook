<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.CarryAntipickFragment">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <ImageView
                    android:id="@+id/imgCarryAntipickAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/carry_detail_avatar" />

            <TextView
                    android:id="@+id/txtCarryAntipickHeroName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/headline_light"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp" />

            <TextView
                    android:id="@+id/txtCarryAntipickHeroRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textColor="@color/title_first_light"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="16dp" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_color_light" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@color/subheadline_light"
                    android:textSize="20sp"
                    android:includeFontPadding="false"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/carry_antipick"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCarryAntipick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>